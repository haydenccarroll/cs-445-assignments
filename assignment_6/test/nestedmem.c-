// all locations are shown with shared memory for parallel
// compound statements.
fred()
{
   for i=1 to 10 do       // i: -2
       for i=1 to 10 do   // i: -3
           i=0;
   for i=1 to 10 do       // i: -2
       if true then {
           int i;        // i: -3
           i=0;
       }
   for i=1 to 10 do       // i: -2
       while false do {
           int i;        // i: -3
           i=0;
       }
   for i=1 to 10 do       // i: -2
       for z = 1 to 11 do {
           int i;        // i: -3
           i=0;
       }
   for i=1 to 10 do       // i: -2
       for z = 1 to 11 do {
           i=0;          // i: -3
       }
}
        
cat(int i){              // i: -2
     if true then {
        int i;           // i: -3
        i=0;
     }}


errorZ(int i) {          // i: -2
     int ii;             // ii: -3
     {
          int i;         // i: -4
  
          if true then {
              int i;     // i: -5
              i=0;
          }    
          i=0;
     }

   for i=1 to 10 do       // i: -4
       {
           int ii;       // ii: -5
           ii=0;
           cat(ii);
       }
   errorZ(i);
}

